{{#partial "content"}}

    <h1>WELCOME TO HERO SQUAD</h1>

    {{#if hero}}
        {{#each hero}}
            <p>Your hero</p>
            <p>{{name}}</p>
            <p>{{superPower}}</p>
            <p>{{weakness}}</p>
            <a href="/hero/{{id}}">About this hero</a>
            {{/each}}
        {{else}}
        <p>You have no heroes yet</p>
        {{/if}}

{{/partial}}

{{> layout.hbs}}